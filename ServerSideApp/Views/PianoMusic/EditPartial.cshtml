@using ServerSideApp.Models.Piano
@using ServerSideApp.Resources
@model EditPM



<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.GenreId, Global.Genre, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.GenreId, Model.GenreSelects, "-- " + Global.SelectOne + " --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DifficultyId, Global.Difficulty, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DifficultyId, Model.DifficulitySelects, "-- " + Global.SelectOne + " --", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DifficultyId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Composer, Global.Composer, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Composer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Composer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, Global.Title, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Mp3Path, Global.AudioFragment, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="mp3" accept="audio/*" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PdfPath, Global.PianoSheet, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="pdf" accept="application/pdf" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MidiPath, Global.PianoMidi, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="midi" accept=".mid" />
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
